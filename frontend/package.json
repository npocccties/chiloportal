{
  "name": "frontend",
  "description": "frontend of chiloportal",
  "version": "0.0.0",
  "author": "Kimiaki Kuno <knokmki612@gmail.com>",
  "bugs": "https://github.com/npocccties/chiloportal/issues",
  "dependencies": {
    "next": "^12.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@aspida/fetch": "^1.11.0",
    "@faker-js/faker": "^7.5.0",
    "@headlessui/react": "^1.6.6",
    "@iconify/react": "^3.2.2",
    "@jumpu-ui/tailwindcss": "^1.0.1-alpha.5",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.7",
    "@types/node": "^18.7.5",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "aspida": "^1.11.0",
    "autoprefixer": "^10.4.12",
    "clsx": "^1.2.1",
    "eslint": "^8.24.0",
    "eslint-config-next": "^12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "fixpack": "^4.0.0",
    "gray-matter": "^4.0.3",
    "micromark": "^3.1.0",
    "micromark-extension-frontmatter": "^1.0.0",
    "micromark-extension-gfm": "^2.0.1",
    "minimist": "^1.2.6",
    "msw": "^0.47.3",
    "npm-run-all": "^4.1.5",
    "openapi2aspida": "^0.19.0",
    "pathpida": "^0.18.1",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "swr": "^1.3.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4",
    "yaml": "^2.1.3",
    "yn": "^5.0.0"
  },
  "engines": {
    "node": "^16.16.0"
  },
  "homepage": "https://github.com/npocccties/chiloportal#readme",
  "keywords": [
    "Open Badge"
  ],
  "main": "",
  "packageManager": "yarn@3.2.3",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/npocccties/chiloportal.git"
  },
  "scripts": {
    "api": "run-s api:clean api:build",
    "api:build": "openapi2aspida -i ../backend/doc/openapi.yaml",
    "api:clean": "rimraf api",
    "build": "run-s api build:clean build:path build:app",
    "build:app": "next build",
    "build:clean": "rimraf public/mockServiceWorker.js",
    "build:path": "pathpida --ignorePath .gitignore",
    "dev": "npm-run-all -s api dev:mock -p dev:path dev:app",
    "dev:app": "next dev",
    "dev:mock": "msw init public --no-save",
    "dev:path": "pathpida --ignorePath .gitignore --watch",
    "format": "run-s format:code format:package",
    "format:code": "prettier --write .",
    "format:package": "fixpack",
    "lint": "next lint",
    "start": "next start",
    "update": "yarn up '*' && yarn up --recursive '*' && yarn dedupe"
  }
}
